<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Books" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:editTextColor">#0e0e0e</item>
        <item name="android:textSize">12sp</item>


        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorAlertDialogListItem">#000000</item>

        <item name="colorPrimary">#F2F2F2</item>
        <item name="colorPrimaryVariant">#F44336</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F44336</item>
        <item name="colorSecondaryVariant">#8A2119</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorPrimaryVariant</item>
    </style>

    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface">
        <item name="android:textColorPrimary">?colorPrimaryVariant</item>
        <item name="colorControlNormal">?colorPrimaryVariant</item>
    </style>
</resources>